<h1>Admin Comments</h1>

<table>
  <thead>
    <tr>
      <th>Comment</th>
      <th>Review</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @replies.each do |reply| %>
      <tr>
        <td><%= reply.comment %></td>
        <td><%= reply.review_id %></td>
        <td><%= reply.user_id %></td>
      </tr>
    <% end %>
  </tbody>
</table>

